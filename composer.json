    "require": {
        "php": "^7.2 || ^8",
        "monolog/monolog": "^2.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^8"
    },
    "autoload": {
        "psr-4": {"Logtail\\Monolog\\": "src/Monolog"}
    },
    "autoload-dev": {
        "psr-4": {"Logtail\\Monolog\\": "src/Monolog"}
    },
    "scripts": {
        "test": "phpunit tests"
    }
}
